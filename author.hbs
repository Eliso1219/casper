{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}
    <header class="main-header author-head {{#if cover}}" style="background-image: url({{cover}}){{else}}no-cover{{/if}}">
        <nav class="main-nav overlay clearfix">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
            {{#if @blog.navigation}}
                <a class="menu-button icon-menu" href="#"><span class="iconfont">&#58912;</span><span class="word">菜单</span></a>
            {{/if}}
        </nav>
    </header>

    <section class="author-profile inner">
        {{#if image}}
        <figure class="author-image">
            <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}的头像</span></div>
        </figure>
        {{/if}}
        <h1 class="author-title">{{name}}</h1>
        {{#if bio}}
            <h2 class="author-bio">{{bio}}</h2>
        {{/if}}
        <div class="author-meta">
            {{#if location}}<p class="author-location">{{location}}</p>{{/if}}
            {{#if website}}<p class="author-link"><a href="{{website}}">{{website}}</a></p>{{/if}}
            <p class="author-stats"><i clsass="icon-stats"></i> {{plural ../pagination.total empty='没有文章' singular='% 篇文章' plural='% 篇文章'}}</p>
        </div>
        <div class="author-meta">
            <a href="https://www.zhihu.com/people/Eliso1219/">
                <span class="iconfont iconshare">&#58890;</span>
            </a>
            <a href="http://weibo.com/eliso1219/">
                <span class="iconfont iconshare">&#58884;</span>
            </a>
            <a href="https://github.com/eliso1219">
                <span class="iconfont iconshare">&#58889;</span>
            </a>
            <a href="https://space.bilibili.com/16025318/">
                <span class="iconfont iconshare">&#58887;</span>
            </a>
            <a href="https://www.facebook.com/eliso1219/">
                <span class="iconfont iconshare">&#58888;</span>
            </a>
            <a href="https://www.twitter.com/eliso1219/">
                <span class="iconfont iconshare">&#58886;</span>
            </a>
        </div>
    </section>
            
{{/author}}

{{!-- The main content area on the homepage --}}
<main class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
